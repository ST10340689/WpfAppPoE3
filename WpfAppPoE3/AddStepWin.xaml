<Window x:Class="WpfAppPoE3.AddStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Step" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Step Description:"/>
            <TextBox Name="StepDescriptionTextBox" Width="300" Margin="5"/>
            <Button Name="AddStepButton" Content="Add Step" Width="150" Margin="5" Click="AddStepButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
