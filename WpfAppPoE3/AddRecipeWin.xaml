<Window x:Class="WpfAppPoE3.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Recipe" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Recipe Name:"/>
            <TextBox Name="RecipeNameTextBox" Width="200" Margin="5"/>

            <TextBlock Text="Ingredient Name:"/>
            <TextBox Name="IngredientNameTextBox" Width="200" Margin="5"/>

            <TextBlock Text="Quantity:"/>
            <TextBox Name="QuantityTextBox" Width="200" Margin="5"/>

            <TextBlock Text="Unit:"/>
            <TextBox Name="UnitTextBox" Width="200" Margin="5"/>

            <TextBlock Text="Calories:"/>
            <TextBox Name="CaloriesTextBox" Width="200" Margin="5"/>

            <TextBlock Text="Food Group:"/>
            <TextBox Name="FoodGroupTextBox" Width="200" Margin="5"/>

            <Button Content="Add Ingredient" Width="150" Margin="5" Click="AddIngredientButton_Click"/>

            <TextBlock Text="Step:"/>
            <TextBox Name="StepTextBox" Width="200" Margin="5"/>

            <Button Content="Add Step" Width="150" Margin="5" Click="AddStepButton_Click"/>

            <Button Content="Save Recipe" Width="150" Margin="5" Click="SaveRecipeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
